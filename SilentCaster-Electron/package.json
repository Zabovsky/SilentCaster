{
  "name": "silentcaster-electron",
  "version": "2.0.0",
  "description": "SilentCaster - Twitch Chat TTS Application (Electron + Angular)",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "electron": "electron .",
    "electron:dev": "concurrently -k -s first -n \"ANGULAR,ELECTRON\" -c \"cyan,magenta\" \"npm run start\" \"wait-on http://localhost:4200 && npm run electron\"",
    "electron:dev:simple": "start cmd /k \"npm start\" && timeout /t 10 && npm run electron",
    "electron:build": "ng build --configuration production && electron-builder",
    "electron:build:win": "ng build --configuration production && electron-builder --win",
    "test": "ng test",
    "lint": "ng lint"
  },
  "keywords": [
    "twitch",
    "tts",
    "electron",
    "angular"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.0",
    "@angular/cli": "^17.3.0",
    "@angular/compiler-cli": "^17.3.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "~5.4.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "electron-store": "^8.1.0",
    "rxjs": "~7.8.0",
    "tmi.js": "^1.8.5",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "build": {
    "appId": "com.silentcaster.app",
    "productName": "SilentCaster",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
